{
    "json.schemaDownload.enable": true,
    "editor.formatOnSave": true,
    "editor.codeLens": true,
    "editor.rulers": [
        120
    ],
    "python.defaultInterpreterPath": "${workspaceFolder}/src/BibleBot.Frontend/venv/bin/python",
    "python.analysis.typeCheckingMode": "basic",
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter"
    },
    "editor.suggest.insertMode": "insert",
    "dotnet.codeLens.enableReferencesCodeLens": false,
    "dotnet.unitTests.runSettingsPath": "test/BibleBot.Tests.Backend/.runsettings",
    "dotnet.formatting.organizeImportsOnFormat": true,
    "[markdown]": {
        "editor.unicodeHighlight.ambiguousCharacters": false,
        "editor.unicodeHighlight.invisibleCharacters": false,
        "diffEditor.ignoreTrimWhitespace": false,
        "editor.wordWrap": "on",
        "editor.quickSuggestions": {
            "comments": "off",
            "strings": "off",
            "other": "off"
        },
        "editor.formatOnSave": false
    },
    "cursorpyright.analysis.typeCheckingMode": "basic",
    "dotnet-test-explorer.testProjectPath": "test/BibleBot.Tests.Backend/",
    "dotnet-test-explorer.debugger.pipeTransportEnabled": true,
    "dotnet-test-explorer.debugger.pipeCwd": "${workspaceFolder}",
    "dotnet-test-explorer.debugger.pipeProgram": "zsh",
    "dotnet-test-explorer.debugger.pipeArgs": [
        "-c"
    ],
    "dotnet-test-explorer.debugger.debuggerArgs": [
        "--interpreter=vscode"
    ],
    "dotnet-test-explorer.debugger.debuggerPath": "/run/current-system/sw/bin/netcoredbg",
    "dotnet-test-explorer.debugger.quoteArgs": true,
    "dotnet-test-explorer.testArguments": "-s .runsettings"
}